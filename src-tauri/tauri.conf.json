{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tordie 6",
  "version": "0.1.0",
  "identifier": "com.moaesaycto.tordie",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Tordie 6 | Version 6.1.0.0",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "dragDropEnabled": false
      },
      {
        "width": 400,
        "height": 300,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "resizable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "export", "window-control"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/macos/icon.icns",
      "icons/windows/icon.ico"
    ],
    "windows": {
      "nsis": {
        "sidebarImage": "icons/windows-installerSidebar.bmp",
        "headerImage": "icons/windows-installerHeader.bmp",
        "installerIcon": "icons/windows-installer/icon.ico"
      }
    }
  }
}