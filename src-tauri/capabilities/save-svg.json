{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "save-svg",
  "windows": ["main"],
  "permissions": [
    "dialog:allow-save",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD/**/*" }
      ]
    }
  ]
}
